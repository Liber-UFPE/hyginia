{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    'mergeConfidence:all-badges',
    'security:openssf-scorecard'
  ],
  timezone: 'America/Toronto',
  rebaseWhen: 'conflicted',
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      "security"
    ]
  },
  osvVulnerabilityAlerts: true,
  dependencyDashboardOSVVulnerabilitySummary: "all",

  // Detect the Java version in the build.gradle.kts file.
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        'build\\.gradle\\.kts$'
      ],
      matchStrings: [
        'val javaVersion:\\s*Int\\s*=\\s*(?<currentValue>\\d+)'
      ],
      depNameTemplate: 'java',
      datasourceTemplate: 'java-version',
      versioningTemplate: 'loose'
    }
  ],
  packageRules: [
    {
      groupName: 'Java / JDK Version',
      groupSlug: 'java-jdk-version',
      matchDatasources: [
        'docker',
        'java-version'
      ],
      matchPackageNames: [
        'eclipse-temurin',
        'java'
      ]
    },
    {
      matchDepTypes: [
        'devDependencies'
      ],
      matchUpdateTypes: [
        'patch',
        'minor'
      ],
      groupName: 'Node / Dev Dependencies / Patch and Minor Updates',
      groupSlug: 'node-dev-deps-patch-minor'
    },
    {
      groupName: 'Node / Dev Dependencies / Stylelint',
      groupSlug: 'node-dev-deps-stylelint',
      matchPackageNames: [
        '/^stylelint/'
      ]
    },
    {
      groupName: 'Java / Micronaut',
      groupSlug: 'java-micronaut',
      matchPackageNames: [
        'io.micronaut{/,}**'
      ]
    },
    {
      groupName: 'Java / Apache Tika',
      groupSlug: 'java-apache-tika',
      matchPackageNames: [
        'org.apache.tika{/,}**'
      ]
    },
    {
      groupName: 'Kotlin / Plugins',
      groupSlug: 'kotlin-plugins',
      matchPackageNames: [
        'org.jetbrains.kotlin{/,}**',
        'com.google.devtools.ksp{/,}**'
      ]
    }
  ]
}
